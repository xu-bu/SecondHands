.login-container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-color: #f2f5f8;
}
.background-image {
  width: 100%;
  height: 300px;
  /* Adjust the height for your desired rectangular shape */
  position: absolute;
  top: 0;
  left: 0;
  opacity: 0.8;
}
.logo {
  height: 150px;
  margin-bottom: 50px;
}
.button-container {
  display: flex;
  justify-content: space-between;
  width: 100%;
  max-width: 300px;
  margin-top: 20px;
  gap: 10px;
}
.input_box {
  display: flex;
  align-items: center;
  height: 104rpx !important;
  background-color: #f8f9fb;
  border-radius: 8rpx;
  border: solid 2rpx #efeef4;
  padding: 0rpx 40rpx;
  margin-top: 20rpx;
}
.input_box image {
  width: 36rpx;
  height: 24rpx;
}
.input_box input {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  height: 60rpx;
}
.input_box .input_item {
  font-size: 28rpx;
  border: 0px;
  flex: 1;
  background-color: #f8f9fb;
  height: 88rpx;
  width: 100%;
  outline: none;
}
.input_box .grey {
  color: #999999;
}

